---
import Icon from "astro-icon";
import { projects } from "../site.config.ts";
---

<!-- list of projects -->
<section aria-label="Experience" class="mt-16">
  <h2 class="title mb-4 text-xl">Projects</h2>
  <div class="flex-column">
    <!-- 2 sections per row -->
    <div class="flex flex-wrap">
      <!-- Loop through projects -->
      {
        projects.map((project) => {
          return (
            <div class="w-full md:w-1/2 lg:w-1/2 xl:w-1/2 p-4">
              <a href={project.link} target="_blank" rel="noopener noreferrer">
                <div class="bg-accent shadow-lg rounded-lg overflow-hidden">
                  <img
                    class="w-full h-56 object-cover object-center"
                    src={project.image}
                    alt={project.title}
                  />
                  <div class="p-4">
                    <div class="flex flex-row justify-between">
                      <h3 class="title mb-2 text-xl">{project.title}</h3>
                      <a
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-block p-1 sm:hover:text-link"
                        href={project.github}
                      >
                        <Icon
                          class="h-6 w-6"
                          name="mdi:github"
                          aria-hidden="true"
                          focusable="false"
                        />
                      </a>
                    </div>
                    <p class="text-white text-base">{project.description}</p>
                  </div>
                </div>
              </a>
            </div>
          );
        })
      }
      <!-- End of loop -->
    </div>
  </div>
</section>

<!-- function for project -->
